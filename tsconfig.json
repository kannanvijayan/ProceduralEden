{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      "*": [
        "./node_modules/*"
      ]
    },
    "outDir": "./dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/public",
    "dist",
    "node_modules"
  ]
}
